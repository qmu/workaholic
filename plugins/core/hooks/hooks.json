{
  "description": "Automatic code formatting after file changes",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/format.sh",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
